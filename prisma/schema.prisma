generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum AuthProvider {
  GOOGLE
  EMAIL
}

enum Plan {
  FREE
  PRO
  PREMIUM
}

enum ActionType {
  ASTROLOGY
  PALM
  CHAT
}

// Models
model Guest {
  id                  String      @id @default(uuid())
  astrology_reads_used Int        @default(0)
  palm_reads_used     Int         @default(0)
  created_at          DateTime    @default(now())
  last_seen           DateTime?
  usage_logs          UsageLog[]

  @@map("guests")
  @@index([created_at])
}

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  name          String?
  emailVerified DateTime?
  image         String?
  auth_provider AuthProvider @default(GOOGLE)
  plan          Plan         @default(FREE)
  created_at    DateTime     @default(now())
  usage_logs   UsageLog[]
  accounts     Account[]
  sessions     Session[]

  @@map("users")
  @@index([created_at])
  @@index([email])
}

model UsageLog {
  id          String      @id @default(uuid())
  user_id     String?
  guest_id    String?
  action_type ActionType
  created_at  DateTime    @default(now())
  user        User?       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  guest       Guest?      @relation(fields: [guest_id], references: [id], onDelete: Cascade)

  @@map("usage_logs")
  @@index([user_id])
  @@index([guest_id])
  @@index([created_at])
  @@index([action_type])
}

// Auth.js models â€” must match migration (composite keys, no id columns)
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Account")
  @@id([provider, providerAccountId])
  @@index([userId])
}

model Session {
  sessionToken String   @id
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Session")
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@map("VerificationToken")
  @@id([identifier, token])
}
